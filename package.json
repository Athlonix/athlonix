{
  "name": "athlonix-turbo",
  "private": true,
  "scripts": {
    "clean": "turbo clean",
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint && biome check --apply .",
    "lint:check": "turbo lint:check && biome ci .",
    "types:check": "turbo types:check",
    "generate:types": "pnpm -F @repo/types run generate:types",
    "pre-commit": "pnpm run lint:check && pnpm run types:check"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.0",
    "@repo/biome-config": "workspace:*",
    "@repo/supabase": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "turbo": "^1.13.2"
  },
  "packageManager": "pnpm@8.15.7",
  "engines": {
    "node": ">=20"
  }
}
