{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:check": {
      "dependsOn": ["^lint:check"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "types:check": {
      "inputs": ["**/*.ts", "**/*.tsx"],
      "outputs": []
    }
  }
}
